{
  "manifest_version": 3,
  "name": "Animedoro",
  "version": "1.0",
  "description": "Stop procrastination + enjoy working",
  "action": {
    "default_title": "Animedoro Timer",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  }
}
