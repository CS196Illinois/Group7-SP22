{
    "manifest_version": 3,
    "name": "Pomodoro Timer",
    "version": "1.0.0",
    "description": "Helps you schedule breaks efficently",
    "icons": {
        "16": "pomo.png",
        "48": "pomo.png",
        "128": "pomo.png"
    },
    "action": {
        "default_icon": "pomo.png",
        "default_title": "Pomodoro Timer",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options/options.html"
}